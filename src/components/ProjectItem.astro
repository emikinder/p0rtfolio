---
interface Props {
    project: {
        title: string;
        subtitle: string;
        description: string;
        image: string;
        link: string;
        github: string;
        techs: string[];
        color: string;
    };
}

const { title, subtitle, description, image, link, github, techs, color } =
    Astro.props.project;
---

<section class=`shadow w-full flex rounded-lg text-white ${color}`>
    <div class="w-3/5 p-5">
        <h3 class="text-2xl">{title}</h3>
        <h4 class="text-sm">{subtitle}</h4>
        <p class="text-md mt-1">
            {description}
        </p>
        {
            techs && (
                <section class="flex gap-3 mt-3">
                    {techs.map((tech) => (
                        <div>{tech}</div>
                    ))}
                </section>
            )
        }
    </div>
    <div class="w-2/5 p-5 flex flex-col justify-between gap-3"></div>
</section>
<style>
    h3,
    h4 {
        font-family: "Roboto", sans-serif;
    }
    p {
        font-family: "Helvetica Neue", sans-serif;
    }
</style>
