---
import Chip from "./Chip.astro";
import { Slide } from "react-awesome-reveal";
interface Props {
    project: {
        title: string;
        subtitle: string;
        description: string;
        link?: string;
        github?: string;
        techs: string[];
        color: number;
    };
}

const colors = {
    1: "bg-[#0a0a0a] border border-[#faf9f6]",
    2: "bg-[#00a550]",
    3: "bg-[#6622cc]",
    4: "bg-[#bb8bc5] text-black",
    5: "bg-[#f39c19]",
};

const { title, subtitle, description, link, github, techs, color } =
    Astro.props.project;
---

<section
    class=`shadow flex rounded-lg text-white overflow-hidden ${colors[color]}`
>
    <div class="w-3/5 p-4 flex flex-col justify-between">
        <div>
            <h3 class="text-2xl font-subtitle font-bold">{title}</h3>
            <h4 class="text-sm font-text">{subtitle}</h4>
            <p class="text-md mt-1 font-text">
                {description}
            </p>
        </div>
        {
            techs && (
                <section class="flex gap-1 md:gap-3 mt-3">
                    {techs.map((tech) => (
                        <Chip tech={tech} />
                    ))}
                </section>
            )
        }
    </div>
    <div class="w-2/5 p-4 flex justify-end items-end gap-3">
        <Slide
            triggerOnce
            direction="right"
            client:load
        >
            <div class="flex flex-col">
                {
                    github && (
                        <a
                            href={github}
                            target="_blank"
                            class="text-sm font-text hover:underline"
                        >
                            Github
                        </a>
                    )
                }
                {
                    link ? (
                        <a
                            href={link}
                            target="_blank"
                            class="text-sm font-text hover:underline"
                        >
                            View site
                        </a>
                    ) : (
                        <a
                            href={`projects/${title.toLowerCase()}`}
                            class="text-sm font-text hover:underline"
                        >
                            View project
                        </a>
                    )
                }
            </div>
        </Slide>
    </div>
</section>
<style></style>
