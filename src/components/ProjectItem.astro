---
import Chip from "./Chip.astro";
interface Props {
    project: {
        title: string;
        subtitle: string;
        description: string;
        image: string;
        link: string;
        github: string;
        techs: string[];
        color: string;
    };
}

const { title, subtitle, description, image, link, github, techs, color } =
    Astro.props.project;
---

<section class=`shadow rounded-lg text-white cursor-pointer ${color}`>
    <div class="w-3/5 p-5">
        <h3 class="text-2xl font-subtitle">{title}</h3>
        <h4 class="text-sm font-text">{subtitle}</h4>
        <p class="text-md mt-1 font-text">
            {description}
        </p>
        {
            techs && (
                <section class="flex gap-3 mt-3">
                    {techs.map((tech) => (
                        <Chip tech={tech} />
                    ))}
                </section>
            )
        }
    </div>
    <!-- <div class="w-2/5 p-5 flex flex-col justify-between gap-3"></div> -->
</section>
