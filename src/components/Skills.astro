---
import Icon from 'astro-icon';

const items = [
  {
    color: 'bg-customYellow',
    position: 'top-20 left-[53%]',
    moveDirection: 'translate(2px, -2px)',
    title: 'React',
  },
  {
    color: 'bg-customGreen',
    position: 'top-[40%] right-[20%]',
    moveDirection: 'translate(2px, 2px)',
    title: 'Nextjs',
  },
  {
    color: 'bg-customPink',
    position: 'left-[39%] top-[50%]',
    moveDirection: 'translate(-2px, 2px)',
    title: 'Typescript',
  },
  {
    color: 'bg-customBlue',
    position: 'bottom-[30%] left-[12%]',
    moveDirection: 'translate(-2px, -2px)',
    title: 'Threejs',
  },
  {
    color: 'bg-customPurple',
    title: 'Flutter',
  },
];
---

<section class="relative h-[90vh] w-full center-class flex">
  <section
    class="w-full h-full md:w-2/5 md:border-dashed md:border-r"
    id="skills-section"
  >
    <section
      id="0"
      class={`flex relative items-center justify-center h-1/5 border-y border-white
                  first:border-t-0 last:border-b-0 skill-item hover:bg-customPurple`}
    >
      <h5 class="font-inclusive">ReactJS</h5>
      <Icon
        name="circle"
        class="absolute -right-1 -bottom-1 w-[6px] h-[6px] hidden md:block"
      />
    </section>
    <section
      id="1"
      class={`flex relative items-center justify-center h-1/5 border-y border-white
                  first:border-t-0 last:border-b-0 skill-item hover:bg-customGreen`}
    >
      <h5 class="font-inclusive">NextJS</h5>
      <Icon
        name="circle"
        class="absolute -right-1 -bottom-1 w-[6px] h-[6px] hidden md:block"
      />
    </section>
    <section
      id="2"
      class={`flex relative items-center justify-center h-1/5 border-y border-white
                  first:border-t-0 last:border-b-0 skill-item hover:bg-customPink`}
    >
      <h5 class="font-inclusive">ThreeJS</h5>
      <Icon
        name="circle"
        class="absolute -right-1 -bottom-1 w-[6px] h-[6px] hidden md:block"
      />
    </section>
    <section
      id="3"
      class={`flex relative items-center justify-center h-1/5 border-y border-white
                  first:border-t-0 last:border-b-0 skill-item hover:bg-customBlue`}
    >
      <h5 class="font-inclusive">Flutter</h5>
      <Icon
        name="circle"
        class="absolute -right-1 -bottom-1 w-[6px] h-[6px] hidden md:block"
      />
    </section>
    <section
      id="4"
      class={`flex relative items-center justify-center h-1/5 border-y border-white
                  first:border-t-0 last:border-b-0 skill-item hover:bg-customYellow`}
    >
      <h5 class="font-inclusive">Angular</h5>
    </section>
    <!-- {
      items.map((skill, i) => (
        <section
          id={`${i}`}
          class={`flex relative items-center justify-center h-1/5 border-y border-white
                  first:border-t-0 last:border-b-0 skill-item hover:${skill.color}`}
        >
          <h5 class="font-inclusive">{skill.title}</h5>
          {i !== items.length - 1 && (
            <Icon
              name="circle"
              class="absolute -right-1 -bottom-1 w-[6px] h-[6px] hidden md:block"
            />
          )}
        </section>
      ))
    } -->
  </section>
  <section
    id="canvas-section"
    class="hidden md:block w-3/5 h-full"
  >
    <canvas id="scene"></canvas>
  </section>
</section>
<style>
  #scene {
    width: 100%;
    height: 100%;
  }
</style>
<script>
  import { createScene } from '../components/Scene';

  window.addEventListener('load', () => {
    createScene();
  });
</script>
