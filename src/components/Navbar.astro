---
import { Icon } from "astro-icon";
import ThemeIcon from './ThemeIcon.astro';
---

<nav class="navbar fixed w-full h-16 flex items-center">
    <section class="w-full md:w-7/12 m-auto flex justify-between px-3">
        <a
            href="/"
            class="logo text-xl font-bold orange"
            >ek</a
        >
        <div class="social flex">
            <ThemeIcon />
            <a
                href="https://www.linkedin.com/in/emiliano-kinderknecht/"
                target="_blank"
                class="w-[25px]"
            >
                <Icon name="linkedin" />
            </a>
            <a
                href="https://www.github.com/emikinder/"
                target="_blank"
                class="w-[28px]"
            >
                <Icon name="github" />
            </a>
        </div>
    </section>
</nav>
<style>
    .navbar {
        background-color: #111111;
        z-index: 99;
    }

    :global(.dark) .navbar {
        background-color: #faf9f6;
        z-index: 99;
    }

    .social > a {
        margin-left: 1rem;
    }
    a:hover > svg {
        fill: #757574;
    }

    .logo:hover {
        color: #757574;
    }
</style>
