---
import Navbar from "../components/Navbar.astro";
import "@fontsource/roboto";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="emikinder"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon.svg"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>{title}</title>
    </head>
    <body>
        <Navbar />
        <slot />
    </body>
</html>
<style is:global>
    :root {
    }

    html.dark {
        /* background-color: #faf9f6; */
        background: rgb(182, 182, 182);
        background: linear-gradient(
            342deg,
            rgba(182, 182, 182, 1) 0%,
            rgba(250, 249, 246, 1) 59%
        );
        color: #111111;
    }

    /* .dark .nav-links a {
        color: #fff;
    } */

    html {
        color: #faf9f6;
        /* background-color: #111111; */
        background: rgb(11, 11, 11);
        background: linear-gradient(
            342deg,
            rgba(11, 11, 11, 1) 0%,
            rgba(17, 17, 17, 1) 59%
        );
    }

    .shadow {
        box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 50px -12px;
    }

    .orange {
        color: #f39c19;
    }

    .center-class {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .font-subtitle {
        font-family: "Roboto", sans-serif;
        font-size: 1.5rem;
        font-weight: 400;
    }
</style>
