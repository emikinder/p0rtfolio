---
import Navbar from "../components/Navbar.astro";
import "@fontsource-variable/open-sans";
import "@fontsource/roboto";
import "@fontsource-variable/rubik";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="emikinder"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/x-icon"
            href="/favicon.ico"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <meta
            name="theme-color"
            content="black"
        />
        <title>{title}</title>
    </head>
    <body>
        <Navbar />
        <slot />
    </body>
</html>
<style is:global>
    :root {
    }
    html {
        color: #757574;
        background: rgb(11, 11, 11);
        background: linear-gradient(
            170deg,
            rgb(17, 17, 17, 1) 0%,
            rgba(0,0,0) 59%
        );
        /* background: radial-gradient(circle at 10.1% 100.8%, rgb(31, 31, 31) 0%, rgb(0, 0, 0) 99.4%); */
    }

    .shadow {
        box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 50px -12px;
    }

    .orange-text {
        color: #f39c19;
    }

    .center-class {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .font-title {
        font-family: "Open Sans Variable", sans-serif;
    }

    .font-subtitle {
        font-family: "Roboto", sans-serif;
    }

    .font-text {
        font-family: 'Rubik Variable', sans-serif;
    }
</style>
