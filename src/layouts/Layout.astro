---
import Navbar from "../components/Navbar.astro";
import "@fontsource-variable/open-sans";
import '@fontsource-variable/inter';
import "@fontsource/roboto";
import "@fontsource-variable/rubik";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="emikinder"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/x-icon"
            href="/favicon.ico"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <meta
            name="theme-color"
            content="black"
        />
        <title>{title}</title>
    </head>
    <body>
        <Navbar />
        <slot />
    </body>
</html>
<style is:global>
    :root {
        color-scheme: dark;
    }
    html {
        color: #757574;
        background-color: #000;
    }

    .shadow {
        box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 50px -12px;
    }

    .orange-text {
        color: #f39c19;
    }

    .center-class {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .font-title {
        font-family: "Inter Variable", sans-serif;
        font-weight: 700;
        letter-spacing: -2px;
    }

    .font-subtitle {
        font-family: "Inter Variable", sans-serif;
    }

    .font-text {
        font-family: "Inter Variable", sans-serif;
        font-weight: 300;
    }

    .hero::before {
        --grid-color: #51575f;
        --bg-color: #000;
        --grid-size: 24px;
        content: "";
        position: absolute;
        inset: 0;
        background:
            linear-gradient(
                    90deg,
                    var(--bg-color) calc(var(--grid-size) - 2px),
                    transparent 1%
                )
                50%,
            linear-gradient(
                    var(--bg-color) calc(var(--grid-size) - 2px),
                    transparent 1%
                )
                50%,
            var(--grid-color);
        background-position-x: center;
        background-position-y: center;
        background-size: var(--grid-size) var(--grid-size);
        -webkit-mask-image: linear-gradient(0deg, transparent 5%, #000);
        mask-image: linear-gradient(0deg, transparent 5%, #000);
    }
</style>
