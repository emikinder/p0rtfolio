---
import Navbar from "../components/Navbar.astro";
import "@fontsource-variable/open-sans";
import "@fontsource-variable/inter";
import "@fontsource/roboto";
import "@fontsource-variable/rubik";

import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- party-confetti pck -->
    <script
      src="https://cdn.jsdelivr.net/npm/party-js@latest/bundle/party.min.js"
    ></script>
    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-PJTDK4S87B"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-PJTDK4S87B");
    </script>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="let's talk ðŸ§‰"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="/favicon.ico"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <meta
      name="theme-color"
      content="black"
    />
    <link
      rel="canonical"
      href="https://www.emikinder.dev/"
    />
    <meta
      property="og:title"
      content="emikinder | dev"
    />
    <meta
      property="og:description"
      content="Frontend developer portfolio"
    />
    <meta
      name="twitter:card"
      content="summary"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Navbar />
    <slot />
  </body><style is:global>
    :root {
      color-scheme: dark;
    }
    html {
      color: #757574;
      background-color: #000;
    }

    .shadow {
      box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 50px -12px;
    }

    .orange-text {
      color: #f39c19;
    }

    .center-class {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .font-title {
      font-family: "Inter Variable", sans-serif;
      font-weight: 700;
      letter-spacing: -2px;
    }

    .font-subtitle {
      font-family: "Inter Variable", sans-serif;
    }

    .font-text {
      font-family: "Inter Variable", sans-serif;
      font-weight: 300;
    }

    .hero::before {
      --grid-color: #51575f;
      --bg-color: #000;
      --grid-size: 24px;
      content: "";
      position: absolute;
      inset: 0;
      background:
        linear-gradient(
            90deg,
            var(--bg-color) calc(var(--grid-size) - 2px),
            transparent 1%
          )
          50%,
        linear-gradient(
            var(--bg-color) calc(var(--grid-size) - 2px),
            transparent 1%
          )
          50%,
        var(--grid-color);
      background-position-x: center;
      background-position-y: center;
      background-size: var(--grid-size) var(--grid-size);
      -webkit-mask-image: linear-gradient(0deg, transparent 5%, #000);
      mask-image: linear-gradient(0deg, transparent 5%, #000);
    }

    .blog-body h2 {
      font-size: x-large;
      font-family: "Inter Variable", sans-serif;
      font-weight: 700;
    }

    .blog-body p {
      font-size: large;
      font-family: "Consolas", sans-serif;
    }
  </style>
</html>
