---
import Chip from "../../components/Chip.astro";
import Layout from "../../layouts/Layout.astro";
import { Fade } from "react-awesome-reveal";

import { projects } from "../../data/projects.json";
const project = projects.find((project) => project.project === "mas");
---

<Layout title="mas | emikinder">
    <main class="flex justify-center mx-auto overflow-hidden hero">
        <section class="mt-20 md:mt-36 p-3 md:p-0 relative">
            <Fade
                triggerOnce
                client:load
            >
                <h1 class="font-title text-left text-5xl">{project.title}</h1>
                <p class="font-subtitle text-left text-xl w-[70%]">
                    {project.description}
                </p>
                <div class="flex gap-2 my-3">
                    {project.techs.map((tech) => <Chip tech={tech} />)}
                </div>
            </Fade>
            <section class="flex flex-col mt-10">
                <section
                    class="flex justify-between flex-col md:flex-row mb-10"
                >
                    <div
                        class="w-full md:w-2/5 md:p-3 flex flex-col justify-between text-xl text-center"
                    >
                        <div class="md:px-4 mb-4">
                            <p>
                                Web application developed in Python with Django
                                framework. Allows the user to manage the
                                products, stocks, prices, clients and orders of
                                rental. Generates also alerts when the stock of
                                a product is low, and when rental orders are
                                about to expire.
                            </p>
                        </div>
                        <div>
                            <Fade
                                triggerOnce
                                client:load
                                direction="left"
                            >
                                <img
                                    src="/images/mas/new-client.png"
                                    alt="Mas"
                                    class="rounded-lg mb-2"
                                />
                            </Fade>
                        </div>
                    </div>
                    <div class="w-full md:w-3/5">
                        <Fade
                            triggerOnce
                            client:load
                            direction="right"
                        >
                            <img
                                src="/images/mas/inicio.png"
                                alt="Mas"
                                class="rounded-lg"
                            />
                        </Fade>
                    </div>
                </section>
                <section
                    class="flex justify-between flex-col md:flex-row mb-10"
                >
                    <div class="w-full md:w-2/5 hidden md:inline-block">
                        <Fade
                            triggerOnce
                            client:load
                            direction="left"
                        >
                            <img
                                src="/images/mas/remito.png"
                                alt="Mas"
                                class="rounded-lg w-full"
                            />
                        </Fade>
                    </div>
                    <div class="w-full md:w-3/5 md:p-4 flex flex-col text-xl text-center">
                        <div class="md:px-4 mb-4">
                            <p>
                                Rental receipt are generated automatically.
                                Allows partial or total returns, the same as
                                payments. The user can visibilize the financial
                                status of the day, week, month or year. Also can
                                generate reports of clients, products, orders
                                and payments in .xlsx format.
                            </p>
                        </div>
                        <div class="md:hidden inline-block">
                            <Fade
                                triggerOnce
                                client:load
                                direction="left"
                            >
                                <img
                                    src="/images/mas/remito.png"
                                    alt="Mas"
                                    class="rounded-lg mb-2"
                                />
                            </Fade>
                        </div>
                        <div>
                            <Fade
                                triggerOnce
                                client:load
                                direction="right"
                            >
                                <img
                                    src="/images/mas/cont.png"
                                    alt="Mas"
                                    class="rounded-lg"
                                />
                            </Fade>
                        </div>
                    </div>
                </section>
            </section>
        </section>
    </main>
</Layout>
<style>
    h1 {
        font-weight: 700;
        color: #faf9f6;
    }

    main {
        width: 100%;
    }

    @media (min-width: 768px) {
        main {
            width: 85%;
        }
    }

    @media (min-width: 1024px) {
        main {
            width: 75%;
        }
    }

    @media (min-width: 1200px) {
        main {
            width: 65%;
        }
    }
</style>
