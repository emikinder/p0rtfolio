---
import Back from "../../components/Back.astro";
import Layout from "../../layouts/Layout.astro";
import Posts from "../../components/Posts.astro";
import { Fade } from "react-awesome-reveal";
---

<Layout title="blog | emikinder">
    <main class="flex justify-center hero">
        <section class="p-3 my-20 md:mt-24 md:p-0 w-[55rem] relative">
            <Back />
            <Fade
                triggerOnce
                client:load
            >
                <h1 class="font-title text-center text-5xl mx-0 md:mx-28 mt-4 text-balance">
                    Projects progress. Word. Personal tech blog. 
                </h1>
            </Fade>
            <Posts />
        </section>
    </main>
</Layout>
<style>
    h1 {
        font-weight: 700;
        color: #faf9f6;
    }
</style>
